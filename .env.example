# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-super-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,.render.com

# Database Configuration (PostgreSQL for production)
# On Render: Create a PostgreSQL database and use these connection details
DB_NAME=ai_summarizer
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=your_db_host
DB_PORT=5432

# Alternative: Use DATABASE_URL (Render provides this automatically)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# For LOCAL DEVELOPMENT ONLY - set this to True to use SQLite
USE_SQLITE=True

# API Keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_DEFAULT_MODEL=llama-3.1-8b-instant

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=AI Summarizer <noreply@yourdomain.com>

# Render Specific (if deploying to Render)
RENDER=True

# Redis Settings (for Celery)
REDIS_URL=redis://localhost:6379/0

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
